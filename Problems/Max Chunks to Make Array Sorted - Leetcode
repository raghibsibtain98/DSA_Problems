class Solution {
    public int maxChunksToSorted(int[] arr) {
        
        int maxi = Integer.MIN_VALUE;
        int chunks = 0;
        int n = arr.length;
        
        for(int i = 0; i<n; i++){
            maxi = Math.max(maxi,arr[i]);
            if(maxi==i){
                chunks++;
            }
        }
        return chunks;
    }
}
